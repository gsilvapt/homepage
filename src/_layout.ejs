<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= description %>">
    <link href="{{ .RSSlink }}" rel="alternate" type="application/rss+xml" title="<%= site_title %>" />
    <link href="/css/site.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.css" rel="stylesheet">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif] d-->
  </head>
  <body>
    <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper" class="sidebar-nav">
        <a class='sidebar-brand' href="<%= base_url %>">
          <img src="<%= profile_url %>" />
          <h1 class="brand"><%= site_title %></h1>
          <h3 class="tagline"><%= description %></h3>
        </a>
        <hr />
        <ul class="sidebar-nav">
          <li><a href="<%= slack_url %>"><i class="fa fa-slack"></i> slack</a></li>
          <li><a href="<%= meetup_url %>"><img style='padding-left: 14px; opacity: 0.4; height: 14px;' src="/images/fa-meetup.svg"/> meetup</a></li>
          <li><a href="<%= github_url %>"><i class="fa fa-github-square"></i> github</a></li>
          <li><a href="<%= youtube_url %>"><i class="fa fa-youtube"></i> youtube</a></li>
        </ul>
      </div>

      <div class="content">
        <h1><%= title %></h1>
        <div id='article'>
          <% if (current.path != "index") { %>
          <div class='speaker-deck'>
            <% speakers.forEach(function(pic) { %>
            <img src="<%= pic %>">
            <% }) %>
          </div>
          <% } %>
          <%- yield %>
        </div>
      </div>
    </div>
  </body>
</html>
